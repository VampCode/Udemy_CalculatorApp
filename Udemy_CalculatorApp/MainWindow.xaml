<Window x:Class="Udemy_CalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy_CalculatorApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350">
    <Grid Margin="10">
        <!-- Defining the Columns-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <!-- Defining the Rows-->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Defining the Result Window-->
        <Label x:Name="resultLabel"
               Content="0"
               Grid.ColumnSpan="4"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               FontSize="60"/>
        <!-- Defining the First Row of Buttons-->
        <Button x:Name="acButton" 
                Content="AC"
                Grid.Row="1"
                Margin="5"/>
        <Button x:Name="negativeButton"
                Content="+/-"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"/>
        <Button x:Name="percentButton"
                Content="%"
                Grid.Row="1"
                Grid.Column="2"
                Margin="5"/>
        <Button x:Name="divisionButton"
                Content="/"
                Grid.Row="1"
                Grid.Column="3"
                Margin="5"/>
        <!-- Defining the Second Row of Buttons-->
        <Button x:Name="sevenButton"
                Click="sevenButton_Click"
                Content="7"
                Grid.Row="2"
                Margin="5"/>
        <Button x:Name="eightButton"
                Content="8"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"/>
        <Button x:Name="nineButton"
                Content="9"
                Grid.Row="2"
                Grid.Column="2"
                Margin="5"/>
        <Button x:Name="multiplyButton"
                Content="*"
                Grid.Row="2"
                Grid.Column="3"
                Margin="5"/>
        <!-- Defining the Third Row of Buttons-->
        <Button x:Name="fourButton"
                Content="4"
                Grid.Row="3"
                Margin="5"/>
        <Button x:Name="fiveButton"
                Content="5"
                Grid.Row="3"
                Grid.Column="1"
                Margin="5"/>
        <Button x:Name="sixButton"
                Content="6"
                Grid.Row="3"
                Grid.Column="2"
                Margin="5"/>
        <Button x:Name="subtractButton"
                Content="-"
                Grid.Row="3"
                Grid.Column="3"
                Margin="5"/>
        <!-- Defining the Fourth Row of Buttons-->
        <Button x:Name="oneButton"
                Content="1"
                Grid.Row="4"
                Margin="5"/>
        <Button x:Name="twoButton"
                Content="2"
                Grid.Row="4"
                Grid.Column="1"
                Margin="5"/>
        <Button x:Name="threeButton"
                Content="3"
                Grid.Row="4"
                Grid.Column="2"
                Margin="5"/>
        <Button x:Name="addButton"
                Content="+"
                Grid.Row="4"
                Grid.Column="3"
                Margin="5"/>
        <!-- Defining the Fifth Row of Buttons-->
        <Button x:Name="zeroButton"
                Content="0"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Margin="5"/>
        <Button x:Name="decimalButton"
                Content="."
                Grid.Row="5"
                Grid.Column="2"
                Margin="5"/>
        <Button x:Name="equalsButton"
                Content="="
                Grid.Row="5"
                Grid.Column="3"
                Margin="5"/>
        
    </Grid>
</Window>
